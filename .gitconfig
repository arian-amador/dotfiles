[user]
    name = Arian Amador
    email = arian@arianamador.com
[core]
    pager = less -r
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[merge]
    defaultToUpstream = true
    tool = vimdiff
    conflictstyle = diff3
[diff]
    indentHeuristic = true
[help]
    autocorrect = 30
[commit]
    verbose = 1
